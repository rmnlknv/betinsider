<div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>Спорт</th>
        <th>Информация</th>
        <th>Дата и время</th>
        <th>Цена</th>
        <th>Состояние</th>
        <th>Покупка</th>
      </tr>
    </thead>
    <tbody>
        <% @predictions.each do |prediction| %>

        <% if current_user.predictions.where(id: prediction).any? %> 
            <% owned = true %> 
        <% else %> 
            <% owned = false %>
        <% end %>

      <tr>
        <td><%= prediction.discipline %></td>
        <td><% if owned %> <%= prediction.info %> <% else %> Для просмотра необходимо купить. <% end %></td>
        <td><%= prediction.date.strftime("%d-%m-%Y %H-%M") %></td>
        <td><%= prediction.price %></td>
        <td><%= prediction.status %></td>
        <td>
        <% if owned %> 
          Куплено 
        <% else %>
          <%= link_to 'Купить', prediction, data: { confirm: 'Вы уверены, что хотите купить этот прогноз? ' } %>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>

